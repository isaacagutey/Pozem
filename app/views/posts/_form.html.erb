<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_field :title, placeholder: "Enter title" %>
  </div>
  </br>
  <div class="field">
    <%= f.text_area :body, size: "50x5", placeholder: "Enter post body"%>
  </div>
   <div class="field">
    <%= f.file_field(:photo,  class: 'btn btn-info') do %>
    <i class="fa fa-camera"></i>
    <% end %>
  </div>

  <br>
  <div class="actions">
    <%= f.submit class: 'btn btn-success'%>
  </div>
<% end %>


